<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aguosoft.app.videocamp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name=".activity.ChannelActivity"
            android:label="@string/title_activity_channel"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activity.SingleVideoPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name=".activity.PlaylistPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.Dark">
        </activity>
    </application>

</manifest>